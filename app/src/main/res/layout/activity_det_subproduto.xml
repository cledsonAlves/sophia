<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:descendantFocusability="blocksDescendants"
android:background="@color/inv_white">

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/inv2_det_subp_bottomcontainer"
    android:background="@color/inv_white_three">

    <RelativeLayout
            android:id="@+id/inv2_det_subp_maincontainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/inv_white_three">

            <include layout="@layout/layout_header_pequeno" />

            <RelativeLayout
                android:id="@+id/inv2_det_subp_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/inv2_det_supp_produto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/inv_black_two"
                    android:lineSpacingExtra="4sp"
                    android:gravity="center_horizontal"
                    android:text="@string/det_subp_lbl_produto"
                    />

                <TextView
                    android:id="@+id/inv2_det_subp_lbl_investido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/inv2_det_supp_produto"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/inv_black_two"
                    android:lineSpacingExtra="2sp"
                    android:text="@string/det_subp_lbl_valor_total"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/inv2_det_subp_lbl_investido"
                    android:layout_marginTop="1dp">

                    <TextView
                        android:id="@+id/inv2_det_subp_rs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/inv_black_two"
                        android:lineSpacingExtra="2sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="4dp"
                        android:text="@string/app_monetary_simbol"
                        />
                    <TextView
                        android:id="@+id/inv2_det_supp_valor_investido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/inv2_det_subp_rs"
                        android:textSize="32sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textColor="@color/inv_black_two"
                        android:lineSpacingExtra="-16sp"
                        />
                    <ImageButton
                        android:id="@+id/icon_info"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_info_inv"
                        android:background="@color/inv_transparent"
                        android:layout_toEndOf="@+id/inv2_det_supp_valor_investido"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/inv2_det_subp_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_below="@+id/inv2_det_subp_header"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="5dp"
                    android:background="@color/inv_white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:id="@+id/ll_container_valor_resgate"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="150dp"
                                android:lines="2"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:textColor="@color/inv_warm_grey"
                                android:text="@string/det_subp_lbl_valor_disponivel"
                                />
                            <TextView
                                android:id="@+id/inv2_det_subp_valor_disponivel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/inv_black"
                                android:gravity="end"
                                />
                        </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/ll_container_text_corretora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        >
                        <TextView
                            android:id="@+id/det_subp_text_corretora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="@color/inv_black_two"
                            android:text="@string/det_subp_text_go_corretora"
                            />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/inv_white"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_warm_grey"
                                android:lineSpacingExtra="1.5sp"
                                android:text="@string/det_subp_lbl_ultima_atualizacao"
                                />
                            <TextView
                                android:id="@+id/inv2_det_subp_data_ultima_atualizacao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/inv_black"
                                android:gravity="end"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:id="@+id/inv2_det_subp_detalhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/det_subp_total_contracts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/det_subp_lbl_qntd_contratos"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="15dp"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="@color/inv_warm_grey"

                        />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/det_subp_lista_detalhe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
<LinearLayout
    android:id="@+id/inv2_det_subp_bottomcontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/inv_white_three"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:visibility="gone"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    >
    <Button
        android:id="@+id/det_subp_botao_aplicar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/app_button_red_grey_pill"
        android:textColor="@color/inv_white_two"
        android:text="@string/inv_home_btn_aplicar"
        android:textSize="18sp"
        style="?android:attr/borderlessButtonStyle"
        />
</LinearLayout>

    <!-- laoding -->
    <RelativeLayout
        android:id="@+id/inv2_det_subp_layout_loadinig"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <include layout="@layout/layout_loading_state" android:visibility="visible"/>
    </RelativeLayout>

</RelativeLayout>