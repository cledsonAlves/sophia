<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/inv_white_three">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/cdb_progressivo_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_cdb_progressivo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <include layout="@layout/layout_header_printable" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/inv_white_three"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/inv_white"/>
        <Button
            android:id="@+id/cdb_progressivo_btn_compartilhar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@color/inv_transparent"
            android:text="@string/app_compartilhar"
            android:layout_gravity="bottom"
            android:textColor="@color/inv_black_two"
            />

    </RelativeLayout>


    <include layout="@layout/layout_loading_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cdb_progressivo_loading"
        android:visibility="visible"/>

</RelativeLayout>