<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/inv_white_three"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_grey_border"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_comprovante_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/label_produto"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="normal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_comprovante_lbl_certificado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/label_certificado"
                android:textColor="@color/inv_black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_comprovante_valor_certificado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/inv_warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_comprovante_titular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/label_nome_titular"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:textStyle="normal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_comprovante_lbl_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/label_cpf"
                android:textColor="@color/inv_black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_comprovante_valor_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/inv_warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_comprovante_lbl_efetivacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/label_efetivacao"
                android:textColor="@color/inv_black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_comprovante_data_efetivacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/inv_warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_comprovante_lbl_investido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/label_valor_total_investido"
                android:textColor="@color/inv_black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_comprovante_valor_total_investido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/inv_warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_comprovante_lbl_resgate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/label_valor_resgate"
                android:textColor="@color/inv_black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_comprovante_valor_resgate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/inv_warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_comprovante_lbl_iof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/label_iof"
                android:textColor="@color/inv_black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_comprovante_valor_iof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/inv_warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_copmprovante_lbl_ir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/label_ir"
                android:textColor="@color/inv_black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_comprovante_valor_ir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/inv_warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_comprovante_lbl_taxa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/label_taxa_carregamento"
                android:textColor="@color/inv_black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_comprovante_valor_taxa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/inv_warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

    <!-- Data, hora e autenticação da transação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_grey_border"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/label_data_hora_transacao"
            android:textColor="@color/inv_black"
            android:textSize="11.3sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/item_comprovante_data_transacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/inv_warm_grey"
            android:textSize="11.3sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/label_autenticacao_transacao"
            android:textColor="@color/inv_black"
            android:textSize="11.3sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/item_comprovante_valor_autenticacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp"
            android:textColor="@color/inv_warm_grey"
            android:textSize="11.3sp"
            android:textStyle="normal" />

    </LinearLayout>
</LinearLayout>
