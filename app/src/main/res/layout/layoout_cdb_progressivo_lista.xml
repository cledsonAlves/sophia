<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cdb_progressivo_lista_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:layout_toStartOf="@+id/cdb_progressivo_lista_percentagem"
            android:textColor="@color/inv_warm_grey"
            android:lineSpacingExtra="6sp"/>
        <TextView
            android:id="@id/cdb_progressivo_lista_percentagem"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/inv_black"
            android:gravity="end"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="@color/inv_pinkish_grey"
        />

</RelativeLayout>