<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@color/inv_white_three"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:layout_margin="8dp"
        android:elevation="2dp"
        app:cardCornerRadius="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/det_subp_card_cor_familia"
                android:layout_width="8dp"
                android:layout_height="85dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/primary_dark" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/picture"
                app:civ_border_color="@color/primary_dark"
                app:civ_border_width="2dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="cursive"
                android:text="Sophia alves camargo"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:fontFamily="cursive"
            android:text="Data de Nascimento : "
            android:textColor="@color/primary_dark"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <android.support.v7.widget.CardView
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp">

            <View
                android:layout_width="8dp"
                android:layout_height="80dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/primary_dark" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="cursive"
                android:text="30/09/2017"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>


        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:fontFamily="cursive"
            android:text="Hora do Nascimento : "
            android:textColor="@color/primary_dark"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <android.support.v7.widget.CardView
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp">

            <View

                android:layout_width="8dp"
                android:layout_height="80dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/primary_dark" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="cursive"
                android:text="11:15hs"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>


        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:fontFamily="cursive"
            android:text="Peso de Nascimento  : "
            android:textColor="@color/primary_dark"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <android.support.v7.widget.CardView
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp">

            <View

                android:layout_width="8dp"
                android:layout_height="80dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/primary_dark" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="cursive"
                android:text="3.060 kg"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>


        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:fontFamily="cursive"
            android:text="Tipo Sanguineo        : "
            android:textColor="@color/primary_dark"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <android.support.v7.widget.CardView
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp">

            <View

                android:layout_width="8dp"
                android:layout_height="80dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/primary_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="cursive"
                android:text="'O' Negativo"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>


        </android.support.v7.widget.CardView>


    </LinearLayout>


    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/primary_dark" />


</LinearLayout>