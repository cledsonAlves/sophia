<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/inv2_portifolio_produtos_card_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:elevation="2dp"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/portifolio_permite_aporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <View
                android:id="@+id/portifolio_cor_familia"
                android:layout_width="4dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="#70b900" />


            <LinearLayout
                android:id="@+id/familia_name_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="27dp"
                >
                <TextView
                    android:id="@+id/apli_previdecia_nome_aplicacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ph_text_pq"
                    android:textColor="#191919"
                    android:textSize="14sp"
                    />

                <ImageButton
                    android:id="@+id/im_info_familia"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="7dp"

                    android:background="@color/inv_transparent"
                    android:src="@drawable/ic_info_inv" />

            </LinearLayout>


            <TextView
                android:id="@+id/apli_previdecia_check_aplicacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="27dp"
                android:text="65%"
                android:textColor="#191919"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="49dp"
                android:text="@string/inv_home_lbl_valor_investido"
                android:textColor="#787878"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="68dp"
                android:text="R$"
                android:textColor="#191919"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/portifolio_familia_valor_investido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="62dp"
                android:text="61.298,00"
                android:textColor="#191919"
                android:textSize="20sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="108.5dp"
                android:visibility="gone"
                android:background="#f0f0f0" />

            <ImageButton
                android:id="@+id/portifolio_familia_ver_produtos_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:paddingTop="24dp"
                android:paddingEnd="13dp"
                android:paddingBottom="16dp"
                android:layout_below="@+id/divisao2"
                android:background="@color/inv_transparent"
                android:src="@drawable/ic_drop_down" />
            <ImageButton
                android:id="@+id/portifolio_familia_ver_produtos_img_inver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:visibility="gone"
                android:paddingTop="16dp"
                android:paddingStart="13dp"
                android:paddingBottom="24dp"
                android:layout_below="@+id/divisao2"
                android:rotation="180"
                android:background="@color/inv_transparent"
                android:src="@drawable/ic_drop_down" />

            <TextView
                android:id="@+id/portifolio_familia_ver_produtos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="90dp"
                android:paddingTop="16dp"
                android:text="@string/app_ver_produtos"
                android:textColor="@color/inv_warm_grey"
                android:textSize="14sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/portifolio_familia_lista_produtos"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/portifolio_familia_ver_produtos"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0dp"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>