<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="1dp"
    android:id="@+id/configurar_investimentos_card_view"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/configurar_investimentos_recycler_view_icone_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_coe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="43dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/configurar_investimento_recycler_view_titulo_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textColor="@color/inv_black_two"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/configurar_investimento_recycler_view_conteudo_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/inv_warm_grey"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus a velit ut ante vulputate pellentesque. Suspendisse elementum velit ac dolor posuere, id vehicula augue egestas. Suspendisse ac consectetur turpis. Mauris vulputate ut turpis in lobortis. Mauris aliquet lacinia ipsum "
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/configurar_investimentos_recycler_view_seta_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:rotation="-90"
            android:src="@drawable/ic_drop_down" />
    </RelativeLayout>
</android.support.v7.widget.CardView>