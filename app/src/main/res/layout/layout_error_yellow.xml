<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/inv_very_light_pink"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/error_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exclamation_point_solid"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_back"
            />
        <TextView
            android:id="@+id/error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/error_ico"
            android:layout_toStartOf="@+id/error_dismiss"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            android:textColor="@color/inv_pumpkin_orange"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:text="@string/app_name"
            android:lineSpacingExtra="4sp"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:id="@+id/error_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_cancel_inv"
            android:background="@color/inv_transparent"
            android:tint="@color/inv_black_two_40"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_back"
            />
    </RelativeLayout>
    <View
        android:id="@+id/apli_previdecia_cor_aplicacao"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/inv_black_two_20" />


</LinearLayout>