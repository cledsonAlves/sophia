<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/inv_white_three"
    >
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view_cdb_progressivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/inv_white_three"
            >
                    <TextView
                        android:id="@+id/cdb_progressivo_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textColor="@color/inv_black"
                        android:text="Termos e Condições"
                        />
                    <TextView
                        android:id="@+id/cdb_progressivo_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/inv_black_four"
                        />
                   <android.support.v7.widget.RecyclerView
                        android:id="@+id/cdb_progressivo_lista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                       />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <Button
        android:id="@+id/dialog_pzr_btn_fechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="20dp"
        android:background="@color/inv_transparent"
        android:text="@string/app_fechar"
        android:textColor="@color/inv_tealish"
        android:textSize="16sp"
        android:focusableInTouchMode="true"
        />
</LinearLayout>