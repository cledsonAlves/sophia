<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:elevation="2dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/primary"
        android:gravity="center">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_pai"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/papai"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="3dp" />


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_mae"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="23dp"
            android:layout_toStartOf="@+id/btn_pai"
            android:src="@drawable/mamae"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_pai"
            android:layout_below="@+id/btn_pai"
            android:layout_marginEnd="29dp"
            android:layout_marginTop="17dp"
            android:text="Papai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignEnd="@+id/btn_mae"
            android:layout_marginEnd="22dp"
            android:text="MamÃ£e" />


    </RelativeLayout>






</android.support.v7.widget.CardView>
