<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/recomendacao_card_view"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/inv_brownish_grey"
            android:id="@+id/recomendacao_card_view_color"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#191919"
                    android:letterSpacing="0.01"
                    android:text="CDB progressivo especÃ­fico 10M"
                    android:layout_weight="10"
                    android:id="@+id/recomendacao_card_text_view_produto" />

                <TextView
                    android:id="@+id/recomendacao_card_text_view_percentual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#191919"
                    android:gravity="end"
                    android:text="10%"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/recomendacao_card_text_view_familia_produtos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/inv_warm_grey"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="CDB" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/recomendacao_card_text_view_valor_aplicado"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#191919"
                    android:lineSpacingExtra="4sp"
                    android:text="R$ 5.000,00"
                    android:layout_weight="8" />

                <TextView
                    android:id="@+id/recomendacao_card_text_view_risco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/inv_warm_grey"
                    android:gravity="end"
                    android:text="Risco baixo"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_risco_baixo"
                    android:id="@+id/recomendacao_card_image_view_risco"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>