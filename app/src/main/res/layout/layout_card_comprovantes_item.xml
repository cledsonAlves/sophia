<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:background="@color/inv_white_three"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/item_comprovante_card_header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <View
                        android:id="@+id/item_comprovante_card_family_color"
                        android:layout_width="4dp"
                        android:layout_height="40dp"
                        android:background="@color/inv_red"
                        android:layout_centerVertical="true"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="9dp"
                        >
                        <TextView
                            android:id="@+id/item_comprovante_card_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ph_text_pq"
                            android:textColor="#191919"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/item_comprovante_card_contract_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ph_text_pq"
                            android:textColor="#787878"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <!-- INDIVIDUAL -->
                <LinearLayout
                    android:id="@+id/item_comprovante_row_individual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        >
                        <ImageButton
                            android:id="@+id/item_comprovante_card_ic_drop_individual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_drop_down"
                            android:background="@color/inv_transparent" />
                        <TextView
                            android:id="@+id/item_comprovante_card_lbl_vlr_individual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/item_comprovante_card_ic_drop_individual"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textColor="@color/inv_warm_grey"
                            android:lineSpacingExtra="6sp"
                            android:text="@string/car_card_lbl_aplicacao_individual"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/item_comprovante_card_vlr_ind_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_warm_grey"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/car_card_vlr_aplicacao"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/item_comprovante_card_valor_aplicacao"
                                />
                            <TextView
                                android:id="@id/item_comprovante_card_valor_aplicacao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_black"
                                android:gravity="end"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            >
                            <View
                                android:id="@+id/item_comprovante_ind_divider_1"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:background="@color/inv_white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_warm_grey"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/car_card_dt_aplicacao_ind"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/item_comprovante_card_dt_apli_individual"
                                />
                            <TextView
                                android:id="@id/item_comprovante_card_dt_apli_individual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_black"
                                android:gravity="end"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            >

                            <View
                                android:id="@+id/item_comprovante_ind_divider_2"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:background="@color/inv_white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_warm_grey"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/car_card_carencia"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/item_comprovante_card_carencia_apli_individual"
                                />
                            <TextView
                                android:id="@id/item_comprovante_card_carencia_apli_individual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_black"
                                android:gravity="end"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            >

                            <View
                                android:id="@+id/item_comprovante_ind_divider_3"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:background="@color/inv_white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_warm_grey"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/car_card_efeticacao"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_black"
                                android:gravity="end"
                                android:text="@string/car_card_na_data_aplicacao"
                                tools:ignore="RelativeOverlap" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- MENSAL -->
                <LinearLayout
                    android:id="@+id/item_comprovante_row_mensal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        >
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@color/inv_white" />
                        <ImageButton
                            android:id="@+id/item_comprovante_card_ic_drop_mensal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_drop_down"
                            android:background="@color/inv_transparent"
                            />
                        <TextView
                            android:id="@+id/item_comprovante_card_lbl_vlr_mensal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/item_comprovante_card_ic_drop_mensal"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textColor="@color/inv_warm_grey"
                            android:lineSpacingExtra="6sp"
                            android:text="@string/car_card_aplicacao_mensal"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/item_comprovante_card_vlr_men_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_warm_grey"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/car_card_vlr_aplicacao"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/item_comprovante_card_valor_aplicacao_mensal"
                                />
                            <TextView
                                android:id="@id/item_comprovante_card_valor_aplicacao_mensal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_black"
                                android:gravity="end"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            >
                            <View
                                android:id="@+id/item_comprovante_ind_divider_mensal_1"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:background="@color/inv_white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_warm_grey"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/car_card_dt_primeira_aplicacao"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/item_comprovante_card_dt_apli_mensal"
                                />
                            <TextView
                                android:id="@id/item_comprovante_card_dt_apli_mensal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_black"
                                android:gravity="end"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            >

                            <View
                                android:id="@+id/item_comprovante_ind_divider_mensal_2"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:background="@color/inv_white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_warm_grey"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/car_card_carencia"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/item_comprovante_card_carencia_mensal"
                                />
                            <TextView
                                android:id="@id/item_comprovante_card_carencia_mensal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_black"
                                android:gravity="end"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            >

                            <View
                                android:id="@+id/item_comprovante_ind_divider_mensal_3"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:background="@color/inv_white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_warm_grey"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/car_card_efeticacao"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="@color/inv_black"
                                android:gravity="end"
                                android:text="@string/car_card_na_data_solicitacao"
                                tools:ignore="RelativeOverlap" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Data e hora da transação -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/inv_white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/inv_warm_grey"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/label_data_hora_transacao"
                        android:layout_marginTop="13.5dp"
                        android:layout_marginBottom="12dp"
                        />

                    <TextView
                        android:id="@+id/item_comprovante_data_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/inv_black"
                        android:gravity="end"
                        android:layout_marginBottom="17dp"
                        />
                </LinearLayout>

                <!-- autenticação da transação -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/inv_white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/inv_warm_grey"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/label_autenticacao_transacao"
                        android:layout_marginTop="13.5dp"
                        android:layout_marginBottom="12dp"
                        />

                    <TextView
                        android:id="@+id/item_comprovante_autenticacao_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/inv_black"
                        android:gravity="end"
                        android:layout_marginBottom="17dp"
                        />
                </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
