<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <br.com.santander.investimentoV2.shared.view.PlayGifView.PlayGifView
            android:id="@+id/validacao_id_santandder_gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/validacao_id_santandder_text_view_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/validacao_id_santandder_gif"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/validacao_id_santandder_text_view_sub_titulo_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/validacao_id_santandder_text_view_titulo"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/validacao_id_santandder_text_view_sub_titulo_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/validacao_id_santandder_text_view_sub_titulo_1"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <Button
            android:id="@+id/validacao_id_santander_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/app_button_id_santander"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/inv_white"
            android:visibility="gone"
            style="?android:attr/borderlessButtonStyle"
            />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>