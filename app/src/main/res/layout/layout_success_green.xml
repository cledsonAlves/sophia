<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/inv_light_grey_green"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/msg_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/app_back"
            android:src="@drawable/ic_success_check" />

        <TextView
            android:id="@+id/msg_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/msg_ico"
            android:layout_toStartOf="@+id/msg_dismiss"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="4sp"
            android:text="@string/app_name"
            android:textColor="@color/inv_grassy_green"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ImageButton
            android:id="@+id/msg_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@color/inv_transparent"
            android:contentDescription="@string/app_back"
            android:src="@drawable/ic_cancel_inv"
            android:tint="@color/inv_black_two_40" />
    </RelativeLayout>

    <View
        android:id="@+id/apli_previdecia_cor_aplicacao"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/inv_black_two_20" />


</LinearLayout>