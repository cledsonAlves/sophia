<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/inv_white_two"
        android:paddingTop="19dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toast_msg_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="44dp"
            android:paddingBottom="15dp"
            android:layout_toStartOf="@+id/toast_dismiss_btn"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="6sp"
            android:textSize="12sp"
            android:textColor="@color/inv_black_two"
            android:text="@string/label_retomar_apli"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/toast_msg_parametrizada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="44dp"
            android:layout_toStartOf="@+id/toast_dismiss_btn"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/inv_warm_grey"
            android:text="Voce possue um carrinho"
            android:textSize="12sp"
            android:maxLines="1"
            android:textStyle="normal" />


        <ImageButton
            android:id="@+id/toast_dismiss_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:layout_marginEnd="0dp"
            android:background="@color/inv_transparent"
            android:contentDescription="@string/app_back"
            android:src="@drawable/ic_cancel_inv"
            android:tint="@color/inv_black_two_40" />
    </RelativeLayout>

    <View
        android:id="@+id/apli_previdecia_cor_aplicacao"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/inv_black_two_20" />


</LinearLayout>